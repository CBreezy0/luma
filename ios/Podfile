# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!


  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # Pods warnings should NOT break your build
      config.build_settings['GCC_TREAT_WARNINGS_AS_ERRORS'] = 'NO'
      config.build_settings['SWIFT_TREAT_WARNINGS_AS_ERRORS'] = 'NO'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # If any Pod injects -Werror, strip it
      other = config.build_settings['OTHER_CFLAGS']
      if other.is_a?(Array)
        config.build_settings['OTHER_CFLAGS'] = other.reject { |f| f == '-Werror' }
      elsif other.is_a?(String)
        config.build_settings['OTHER_CFLAGS'] = other.gsub('-Werror', '')
      end

      # Same idea for Swift flags, just in case
      swift_other = config.build_settings['OTHER_SWIFT_FLAGS']
      if swift_other.is_a?(Array)
        config.build_settings['OTHER_SWIFT_FLAGS'] = swift_other.reject { |f| f == '-warnings-as-errors' }
      elsif swift_other.is_a?(String)
        config.build_settings['OTHER_SWIFT_FLAGS'] = swift_other.gsub('-warnings-as-errors', '')
      end

      if target.name == 'photo_manager'
        excluded = config.build_settings['EXCLUDED_SOURCE_FILE_NAMES']
        if excluded.is_a?(Array)
          config.build_settings['EXCLUDED_SOURCE_FILE_NAMES'] = (excluded + ['PrivacyInfo.xcprivacy']).uniq
        elsif excluded.is_a?(String) && !excluded.empty?
          config.build_settings['EXCLUDED_SOURCE_FILE_NAMES'] = "#{excluded} PrivacyInfo.xcprivacy"
        else
          config.build_settings['EXCLUDED_SOURCE_FILE_NAMES'] = 'PrivacyInfo.xcprivacy'
        end
      end

      if target.name == 'image_cropper'
        # Avoid module verification issues with Flutter headers in framework builds.
        config.build_settings['DEFINES_MODULE'] = 'NO'
        config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'NO'
      end
    end
  end
end
